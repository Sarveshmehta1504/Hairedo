<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:minWidth="200dp"
    android:layout_marginStart="13dp"
    android:layout_marginTop="12dp"
    android:padding="6dp"
    android:background="@drawable/recommended_box"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="190dp"
        android:minHeight="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_shop"
            android:layout_width="100dp"
            android:layout_height="90dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp">

            <ImageView
                android:id="@+id/shop_section1_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/shop_1"
                android:scaleType="fitXY"
                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/shop_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:id="@+id/shop_name"
                android:text="Shop Name"
                android:textAlignment="textStart"
                style="@style/barbershop"
                />

            <TextView
                android:id="@+id/salon_type"
                android:layout_width="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:text="Men's Salon"
                />

            <TextView
                android:id="@+id/recent_visited"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last visit"
                />
            <LinearLayout
                android:id="@+id/time_slot"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/clock_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clcok_icon"
                    android:layout_marginTop="2dp"
                    android:layout_weight="0.4"
                    />

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:text="15-20 min"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>